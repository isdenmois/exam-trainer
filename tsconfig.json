{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "react",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "rootDirs": ["./src"],
    "paths": {
      "*": ["./src/*"]
    }
  },
  "exclude": ["configs", "node_modules"]
}
